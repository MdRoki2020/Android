<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E91E63"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodNameID"
                android:text="Food Name: Big Burger"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodCodeID"
                android:text="Food Code: G6H5X4T"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodCategoryID"
                android:text="Food Category: Burger"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodPriceID"
                android:text="Food Price: à§³ 400"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodStockID"
                android:text="Food Stock: 44"
                android:gravity="center"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/foodDescriptionID"
                android:text="Food Description: Extra Last And Testy"
                android:gravity="center"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/buttonDeleteId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete "
                android:backgroundTint="#9C27B0"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>